<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/tv_label_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="30dp"
        android:paddingLeft="30dp"
        android:paddingEnd="20dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Write Grounp name"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.firmground.evs.firmground.circle_image.CircleImageView
        android:id="@+id/img_group_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/circle_border_simple"
        app:layout_constraintBottom_toTopOf="@+id/btn_create_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_popup"
        app:srcCompat="@drawable/ic_group_grey_24dp"
        />

    <com.firmground.evs.firmground.circle_image.CircleImageView
        android:id="@+id/img_group_add"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="6dp"
        android:padding="2dp"
        android:background="@drawable/circle_border_simple_black"
        android:src="@drawable/icons8_camera_24"
        app:layout_constraintBottom_toBottomOf="@+id/img_group_icon"
        app:layout_constraintEnd_toStartOf="@+id/ed_create_group" />




    <EditText
        android:id="@+id/ed_create_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:inputType="textCapSentences"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_create_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_group_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_popup" />


    <Button
        android:id="@+id/btn_create_group"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"
        android:text="Create Group"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>